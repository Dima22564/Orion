<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Montserrat:500,600,700&display=swap")
    link(rel="stylesheet", href="./libs/css/vendor.min.css")
    link(rel="stylesheet", href="./css/style.css")
    title Orion Dashboard
  body
    .dashboard
      .my-container
        .my-row
          .graph
            h2 Total Balance
            .graph-container#pie
            .coins
              .coin
                .left
                  img(src="./img/dash-wallet.png", alt="")
                  span.name DASH
                span.num 178.23960
              .coin
                .left
                  img(src="./img/btc-wallet.png", alt="")
                  span.name BTC
                span.num 178.23960
              .coin
                .left
                  img(src="./img/eth-wallet.png", alt="")
                  span.name eth
                span.num 178.23960

          .wrapper
            .wallets
              .top
                h2 Wallets
                button.add
                  img(src="./img/add.png", alt="")
                  span Add Wallet
              .crypto-wallets
                .wallet.eth
                  .title
                    img(src="./img/eth-wallet.png", alt="")
                    span Details
                  p.money #[span.num 12.008895] #[span.currency ETH]
                  p.currency-2 0.260000 btc
                .wallet.btc
                  .title
                    img(src="./img/btc-wallet.png", alt="")
                    span Details
                  p.money #[span.num 12.008895] #[span.currency ETH]
                  p.currency-2 0.260000 btc
                .wallet.dash
                  .title
                    img(src="./img/dash-wallet.png", alt="")
                    span Details
                  p.money #[span.num 12.008895] #[span.currency dash]
                  p.currency-2 0.260000 btc
            .wallets-table
              .titles
                .title
                  span Token
                  img(src="./img/arrow-down.svg", alt="")
                .title
                  span Wallet
                  img(src="./img/arrow-down.svg", alt="")
                .title
                  span Contract
                  img(src="./img/arrow-down.svg", alt="")
                .title
                  span In open order
                  img(src="./img/arrow-down.svg", alt="")
                .title.actions
                  span Actions

              .lines
                .line
                  .cell.emp.coins
                    img(src="./img/btc-color.png" , alt="")
                    span BTC
                  span.cell 1.46780990
                  span.cell 1.46780990
                  span.cell 0.26000000
                  .cell.actions 
                    button.action 
                      img(src="./img/arrow.png", alt="")
                      span Deposit
                    button.action.withdraw
                      img(src="./img/arrow.png", alt="")
                      span Withdraw
                    button.action 
                      img(src="./img/trade.png", alt="")
                      span Trade

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Montserrat:500,600,700&display=swap")
    link(rel="stylesheet", href="./libs/css/vendor.min.css")
    link(rel="stylesheet", href="./css/style.css")
    title Orion Dashboard
  body
    
    .dashboard
      include ./pug/sidebar.pug
      .my-container
        .my-row
          .graph
            h2 Total Balance
            .graph-container#pie
            .coins
              .coin
                .left
                  img(src="./img/dash-wallet.png", alt="")
                  span.name DASH
                span.num 178.23960
              .coin
                .left
                  img(src="./img/btc-wallet.png", alt="")
                  span.name BTC
                span.num 178.23960
              .coin
                .left
                  img(src="./img/eth-wallet.png", alt="")
                  span.name eth
                span.num 178.23960

          .wrapper
            .wallets
              .top
                h2 Wallets
                button.add.js-add-wallet
                  img(src="./img/add.png", alt="")
                  span Add Wallet
              .crypto-wallets
                .wallet.eth
                  .title
                    img(src="./img/eth-wallet.png", alt="")
                    span Details
                  p.money #[span.num 12.008895] #[span.currency ETH]
                  p.currency-2 0.260000 btc
                .wallet.btc
                  .title
                    img(src="./img/btc-wallet.png", alt="")
                    span Details
                  p.money #[span.num 12.008895] #[span.currency ETH]
                  p.currency-2 0.260000 btc
                .wallet.dash
                  .title
                    img(src="./img/dash-wallet.png", alt="")
                    span Details
                  p.money #[span.num 12.008895] #[span.currency dash]
                  p.currency-2 0.260000 btc
            .wallets-table
              .titles
                .title
                  span Token
                  img(src="./img/arrow-down.svg", alt="")
                .title
                  span Wallet
                  img(src="./img/arrow-down.svg", alt="")
                .title
                  span Contract
                  img(src="./img/arrow-down.svg", alt="")
                .title
                  span In open order
                  img(src="./img/arrow-down.svg", alt="")
                .title.actions
                  span Actions

              .lines
                .line
                  .cell.emp.coins
                    img(src="./img/btc-color.png" , alt="")
                    span BTC
                  span.cell 1.46780990
                  span.cell 1.46780990
                  span.cell 0.26000000
                  .cell.actions 
                    button.action 
                      img(src="./img/arrow.png", alt="")
                      span Deposit
                    button.action.withdraw
                      img(src="./img/arrow.png", alt="")
                      span Withdraw
                    button.action 
                      img(src="./img/trade.png", alt="")
                      span Trade
                .line
                  .cell.emp.coins
                    img(src="./img/btc-color.png" , alt="")
                    span BTC
                  span.cell 1.46780990
                  span.cell 1.46780990
                  span.cell 0.26000000
                  .cell.actions 
                    button.action 
                      img(src="./img/arrow.png", alt="")
                      span Deposit
                    button.action.withdraw
                      img(src="./img/arrow.png", alt="")
                      span Withdraw
                    button.action 
                      img(src="./img/trade.png", alt="")
                      span Trade
                .line
                  .cell.emp.coins
                    img(src="./img/btc-color.png" , alt="")
                    span BTC
                  span.cell 1.46780990
                  span.cell 1.46780990
                  span.cell 0.26000000
                  .cell.actions 
                    button.action 
                      img(src="./img/arrow.png", alt="")
                      span Deposit
                    button.action.withdraw
                      img(src="./img/arrow.png", alt="")
                      span Withdraw
                    button.action 
                      img(src="./img/trade.png", alt="")
                      span Trade
                

    .popup-wrapper.js-add-wallet-1
      .popup-body
        .add-wallet-1
          .popup-top
            p.title Add Wallet
            .steps
              span.active 1
              span 2
            img(src="./img/close.png", alt="").close.js-close
          .choose-wallet
            .item.js-next-step
              img(src="./img/big-eth.png", alt="").icon
              .text
                p.name Ethereum
                p.desc Ethereum is the solution
              img(src="./img/arrow-down.svg", alt="").next
            .item.js-next-step
              img(src="./img/wanchain.png", alt="").icon
              .text
                p.name Wanchain
                p.desc Wanchain team has attended
              img(src="./img/arrow-down.svg", alt="").next
            .item.js-next-step
              img(src="./img/waves.png", alt="").icon
              .text
                p.name Waves
                p.desc Revolutionizing the world
              img(src="./img/arrow-down.svg", alt="").next

        
    .popup-wrapper.js-add-wallet-2
      .popup-body
        .add-wallet-2
          .popup-top
            p.title Add Wallet
            .steps
              span 1
              span.active 2
            img(src="./img/close.png", alt="").close.js-close
          .methods
            .tab-titles
              button(data-tab='metamask').active.js-tab-btn Metamask
              button(data-tab='key').js-tab-btn Private Key
              button(data-tab='seed').js-tab-btn Seed
            .tabs
              .tab-metamask.tab
                p.desc Trade tokens on the Ethereum blockchain using the MetaMask browser extension.
                .connect
                  p.subtitle Connect to MetaMask
                  p.allow Allow Orion to connect to MetaMask to begin.
                p.recommend This is a recommended trading method. All transaction signing is done within the MetaMask extension, and private keys are never sent to the browser.
              .tab-key.tab
                .private-key
                  span Enter private key
                  input(type="password", name="")
          .btns
            button.back.js-go-back-to-1
              img(src="./img/arrow-down.svg", alt="")
              span Go back
            button.connect
              img(src="./img/fox.png", alt="")
              span Connect
        


  script(src="./libs/js/vendor.min.js")
  script(src="./js/index.js")
  script(src="./js/graph.js")